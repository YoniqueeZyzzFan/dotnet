<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RecruitmentAgency.Client.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RecruitmentAgency.Client.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RecruitmentAgency.Client">

    <Design.DataContext>
		<vm:MainWindowViewModel/>
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/RecruitmentAgencyStyles.axaml" />
	</Window.Styles>

	<Grid Classes="Main" RowDefinitions="Auto, *">
		<StackPanel Grid.Row="0" Orientation ="Horizontal">
			<Button Classes="ToolButton">
			</Button>
			<Button Classes="ToolButton"/>
			<Button Classes="ToolButton"/>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="True" Items="{Binding CompanyViewModel}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Наименование"/>
			</DataGrid.Columns>
		</DataGrid> 
	</Grid>

</Window>
